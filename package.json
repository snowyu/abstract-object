{
  "name": "abstract-object",
  "version": "2.1.9",
  "description": "AbstractObject with Object State Events Support",
  "homepage": "https://github.com/snowyu/abstract-object",
  "main": "./lib/index.js",
  "module": "./src/index.js",
  "type": "commonjs",
  "files": [
    "README.md",
    "LICENSE-MIT",
    "*.js",
    "*.coffee",
    "test",
    "src",
    "lib"
  ],
  "scripts": {
    "build": "npm run build.cjs && npm run build.ts && npm run doc.md",
    "build.cjs": "babel src --out-dir lib --config-file ./.babelrc",
    "build.ts": "tsc --declaration --emitDeclarationOnly --outDir lib",
    "clean": "rm -fr web docs lib",
    "clean.doc": "rm -fr web docs",
    "clean.ts": "rm -fr lib/*.d.ts",
    "clean.lib": "rm -fr lib",
    "doc": "typedoc --plugin none --out web ./src",
    "doc.md": "typedoc --plugin typedoc-plugin-markdown --out docs ./src",
    "lint": "npx eslint --config .eslintrc.yml src",
    "lint.fix": "npm run lint -- --fix",
    "release": "npm run clean && npm run build && git add docs && git ci -m 'docs: update API docs' && npx commit-and-tag-version -s",
    "release.alpha": "npm run release -- --prerelease alpha",
    "test": "mocha"
  },
  "dependencies": {
    "custom-ability": "^2.0.0-alpha.4",
    "events-ex": "^2.0.0-alpha.1",
    "inherits-ex": "^2.1.0-alpha.11",
    "util-ex": "^2.0.0-alpha.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.4",
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.22.1",
    "@babel/plugin-proposal-dynamic-import": "^7.18.6",
    "@babel/plugin-transform-modules-commonjs": "^7.21.5",
    "@babel/register": "^7.21.0",
    "chai": "~4.3.7",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "mocha": "~10.2.0",
    "prettier": "^2.8.8",
    "sinon": "~15.1.0",
    "sinon-chai": "~3.7.0",
    "typedoc": "^0.24.7",
    "typedoc-plugin-markdown": "^3.15.3",
    "typescript": "~5.0.4"
  },
  "pre-commit": [
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/snowyu/abstract-object"
  },
  "keywords": [
    "ability",
    "abstract",
    "object",
    "class",
    "model",
    "prototype",
    "state",
    "stateful",
    "event"
  ],
  "author": {
    "name": "Riceball LEE",
    "email": "snowyu.lee@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/snowyu/abstract-object/issues"
  }
}
